{
  "manifest_version": 2,
  "name": "HOTH Dark Mode",
  "version": "1.0",
  "description": "Enable dark mode on thehoth.com.",
  "permissions": [
    "https://www.thehoth.com/*",
    "tabs",
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon16.png"
  }
}
