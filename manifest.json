{
    "manifest_version": 3,
    "name": "HOTH Dark Mode Toggle",
    "version": "1.0",
    "description": "Toggle dark mode on thehoth.com.",
    "permissions": ["scripting", "tabs", "storage"],
    "host_permissions": ["https://www.thehoth.com/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  